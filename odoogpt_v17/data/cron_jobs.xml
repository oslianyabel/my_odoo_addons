<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job to cleanup inactive chat completions every 6 hours -->
        <record id="cron_cleanup_inactive_chats" model="ir.cron">
            <field name="name">Cleanup Inactive Chat Completions</field>
            <field name="model_id" ref="model_odoogpt_chat_completions"/>
            <field name="state">code</field>
            <field name="code">model._cron_cleanup_inactive_chats()</field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>
